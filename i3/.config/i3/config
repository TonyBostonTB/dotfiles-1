# Attempt to get links to actually open in the foreground
for_window [urgent=latest] focus

set $Locker i3lock -c 333333 -i ~/.wallpapers/*.png -f && sleep 1

# Autolock/turn off screen
# exec --no-startup-id xset dpms 120
# exec --no-startup-id xautolock -time 5 -locker $Locker
exec --no-startup-id xautolock -detectsleep \
  -notify   60 -notifier "xset dpms force off" \
  -time     5  -locker   "$Locker" \
  -killtime 10 -killer   "systemctl suspend"

# System Mode
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id  systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Delete mode "$mode_system"

set $mode_exit exit (enter) cancel (Escape)
mode "$mode_exit" {
    bindsym Return exec --no-startup-id i3-msg exit, mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_exit"

